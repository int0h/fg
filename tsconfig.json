    "compilerOptions": {
        "target": "es5",
        "outDir": "./build/",
        "declaration": true,
        "inlineSourceMap": true,
        "noImplicitAny": true,
        "allowJs": true
    },
    "exclude": [
        "./src/node_modules",
        "./build/node_modules",
        "node_modules",
        "build"
    ]
}